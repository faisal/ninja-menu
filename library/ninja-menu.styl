.nui-mnu {
  display: inline-block;
  padding: 4px 12px;
  position: relative;
  vertical-align: middle;
  &:hover {
    background-color: rgba(0,0,0,0.05);
    border-radius: 4px;
  }
  img {
    vertical-align: middle;
  }
  > .nui-lst > .nui-crt {
    border-bottom: 6px solid $color-background;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
    display: inline-block;
    position: absolute;
    left: 12px;
    top: -6px;
  }
  > .nui-arw-dwn {
    margin-left: 2px;
  }
}
