.ninja-menu {
  cursor: pointer;
  position: relative;
  > .ninja-list > .ninja-point-up {
    border-bottom-style: solid;
    border-bottom-width: 6px;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
    display: inline-block;
    position: absolute;
    top: -6px;
  }
  > .ninja-arrow-down {
    margin-left: 2px;
  }
}
